<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.willroberts.android.petphone"
    android:versionCode="6"
    android:versionName="@string/version" >

    <uses-sdk android:minSdkVersion="3"
        android:targetSdkVersion="10"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:icon="@drawable/petphonelogo"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".PetPhoneActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutPetPhoneActivity" 
            android:label="@string/about">
            </activity>
        <activity android:name=".FileChooser" android:label="Choose your pet">
        </activity>
        <activity android:name=".OptionPetPhoneActivity" android:label="Options">
        </activity>
        <activity android:name=".Prefs" android:label="Options">
        </activity>
    </application>

</manifest>